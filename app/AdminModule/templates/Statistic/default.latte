        <script>
            var array = JSON.parse({$JSONData});
            var phasesArr = [];
            var idArray = [];
            var moneyArray = [];

            var getSeverityType = function(severity){
                var severityType;
                if(severity <= 0.2)
                    severityType = 0;
                else if(severity > 0.2 && severity <= 0.4)
                    severityType = 1;
                else if(severity > 0.4 && severity <= 0.6)
                    severityType = 2;
                else if(severity > 0.6 && severity <= 0.8)
                    severityType = 3;
                else if(severity > 0.8 && severity <= 1)
                    severityType = 4;

                return severityType;
            };

            var getProbabilityType = function(probability){
                var probabilityType;
                if(probability <= 0.2)
                    probabilityType = 0;
                else if(probability > 0.2 && probability <= 0.4)
                    probabilityType = 1;
                else if(probability > 0.4 && probability <= 0.6)
                    probabilityType = 2;
                else if(probability > 0.6 && probability <= 0.8)
                    probabilityType = 3;
                else if(probability > 0.8 && probability <= 1)
                    probabilityType = 4;

                return probabilityType;
            };

            var findRisks = function(category) {
                var risksArr = [];
                phasesArr.forEach(function(phase){
                    phase.risks.forEach(function(risk){
                        if(risk.category == category){
                            risksArr.push(risk);
                        }
                    });
                });
                return risksArr;
            };

            array.forEach(function(phases){
                var risksArr = [];
                phases.forEach(function(risk) {
                    var severityType = getSeverityType(risk[4]);
                    var probabilityType = getProbabilityType(risk[2]);

                    idArray.push([risk[1], risk[3]]);
//                    moneyArray.push(risk[3]);
                    risksArr.push({
                        id: risk[0],
                        name: risk[1],
                        probability: risk[2],
                        money: risk[3],
                        severity: risk[4],
                        cause: risk[5],
                        result: risk[6],
                        category: "#"+severityType.toString()+"-"+probabilityType.toString()
                    });
                });
                phasesArr.push({
                    risks: risksArr
                });
            });

            [0, 1, 2, 3, 4].forEach(function(first){
                [0, 1, 2, 3, 4].forEach(function(second){
                    var idOfTable = "#" + first.toString() + "-" + second.toString();
                    $(idOfTable).css( 'cursor', 'pointer' );
                    $(idOfTable).click(function(event) {
                        console.log("event.target.id: ", event.target.id);
                        var risksClicked = findRisks("#"+event.target.id);

                        var myTable= "<table class=\"table table-striped m-0\"><tr><th style='width: 100px;'>id</th>";
                        myTable+= "<th style='width: 100px; text-align: left;'>Pravděpodobnost</th>";
                        myTable+= "<th style='width: 100px; text-align: left;'>Dopad</th>";
                        myTable+= "<th style='width: 100px; text-align: left;'>Příčina</th>";
                        myTable+="<th style='width: 100px; text-align: left;'>Následek</th></tr>";

                        risksClicked.forEach(function(riskClicked){
                            myTable += "<tr><td style='width: 100px;'>" + riskClicked.id + "</td>";
                            myTable += "<td style='width: 100px; text-align: left;'>" + parseFloat(riskClicked.probability)*100 + "%" + "</td>";
                            myTable += "<td style='width: 100px; text-align: left;'>" + parseFloat(riskClicked.severity)*100 + "%" + "</td>";
                            myTable += "<td style='width: 100px; text-align: left;'>" + riskClicked.cause + "</td>";
                            myTable += "<td style='width: 100px; text-align: left;'>" + riskClicked.result + "</td></tr>";
                        });
                        myTable+="</table>";

                        if(risksClicked.length === 0){
                            document.getElementById('risksHeader').innerHTML = "Rizika (0)";
                            document.getElementById('risksTable').innerHTML = "";
                        }
                        else{
                            document.getElementById('risksHeader').innerHTML = "Rizika (" + risksClicked.length + ")";
                            document.getElementById('risksTable').innerHTML = myTable;
                        }
                    });
                });
            });

            [0, 1, 2, 3, 4].forEach(function(first){
                [0, 1, 2, 3, 4].forEach(function(second){
                    var idOfTable = "#" + first.toString() + "-" + second.toString();
                    var count = findRisks(idOfTable).length;
                    var cellText = $(idOfTable).text();

                    $(idOfTable).text(cellText+" ("+count+")");
                });
            });

            Highcharts.chart('container', {
                chart: {
                    type: 'column'
                },
                title: {
                    text: 'Rizika a jejich cena'
                },
                xAxis: {
                    type: 'category',
                    labels: {
                        rotation: -45,
                        style: {
                            fontSize: '13px',
                            fontFamily: 'Verdana, sans-serif'
                        }
                    }
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: 'Cena rizika (kč)'
                    }
                },
                legend: {
                    enabled: false
                },
                series: [{
                    name: 'Cena (kč)',
                    data: idArray,
                    dataLabels: {
                        enabled: true,
                        rotation: -90,
                        color: '#FFFFFF',
                        align: 'right',
                        y: 10,
                        style: {
                            fontSize: '13px',
                            fontFamily: 'Verdana, sans-serif'
                        }
                    }
                }]
            });



        </script>

